<% layout('base') -%>
    <div class="all-content">
        <div class="show-blog py-4">
            <div class="margin-x">
                <div class="col-8">
                    <div class="bread-crumb" style="margin-right: 12px;">
                        <nav style="--bs-breadcrumb-divider: '';border-top: 2px solid black;" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a class="nav-link" href=""><i class="fas fa-home"
                                            style="font-size: 16px;color: black;">&nbsp&nbsp&nbsp</i>
                                        <i class="fa fa-chevron-right text-dark"></i></a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <a class="nav-link" href="">
                                        <span>
                                            <%= organization.name %>&nbsp&nbsp&nbsp
                                        </span>
                                        <span>

                                        </span>
                                        <i class="fa fa-chevron-right text-dark"></i></a>
                                </li>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="col-8">
                        <div class="bg-white py-3">
                            <div class="mx-4 py-2 bg-primary text-center">
                                <span class="text-white fw-bold">
                                    <%= organization.name %>
                                </span>
                            </div>
                            <% organization.lectures.forEach((value,index)=>{ %>
                                <div class="d-flex all-lecture mx-4 py-2">
                                    <div class="col-3 mx-3">
                                        <img src="/uploads/images/<%= value.image %>" width="100%" alt="">
                                    </div>
                                    <div class="col-9">
                                        <strong><%= value.name %></strong>
                                        <p><%= value.position %></p>
                                        <p>Email: <%= value.email %></p>
                                        <p>Điện thoại: <%= value.phone %></p>
                                        <p>Nhiệm vụ:</p>
                                        <h6><%= value.task %></h6>
                                    </div>
                                </div>
                                <% });%>
                        </div>
                    </div>
                    <%- include('./partials/rightPart.ejs') %>

                </div>
            </div>
        </div>
    </div>